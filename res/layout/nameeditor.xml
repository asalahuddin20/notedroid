<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent">
<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="vertical">
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/NameEditor.TitleText" android:layout_margin="5px" android:text="@+id/NameEditor.TitleText"></TextView><EditText android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/NameEditor.NameEditText" android:inputType="textCapSentences" android:layout_width="fill_parent"></EditText>

<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@+id/NameEditor.TypeText" android:id="@+id/NameEditor.TypeText" android:layout_marginLeft="5px"></TextView>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@+id/NameEditor.ModificationDateText" android:id="@+id/NameEditor.ModificationDateText" android:layout_marginLeft="5px"></TextView>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@+id/NameEditor.CreationDateText" android:id="@+id/NameEditor.CreationDateText" android:layout_marginLeft="5px"></TextView>
</LinearLayout>
<LinearLayout android:layout_height="fill_parent" android:layout_width="fill_parent" android:orientation="vertical" android:layout_weight="0.50">
</LinearLayout>


</LinearLayout>
