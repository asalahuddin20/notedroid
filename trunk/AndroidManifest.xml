<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.notedroid"
      android:versionCode="1" android:versionName="0.1.1.dev">
    <application android:icon="@drawable/icon" android:label="@string/Notedroid.ApplicationName" android:description="@string/Notedroid.ApplicationDescription">
        <activity android:name=".NoteDroid"
                  android:label="@string/Notedroid.ApplicationName">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    	<activity android:name=".gui.activities.NoteEditor" android:windowSoftInputMode="adjustResize"></activity>
		<activity android:name=".gui.activities.NameEditor" android:windowSoftInputMode="stateVisible|adjustResize"></activity>
		<activity android:name=".gui.activities.NoteList"></activity>
		<activity android:name=".gui.activities.PreferencesScreen"></activity>

	</application>
    <uses-sdk android:minSdkVersion="3" />
</manifest> 